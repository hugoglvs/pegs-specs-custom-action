{
  "name": "pegs-specs-custom-action",
  "version": "0.0.1",
  "description": "Custom GitHub Action to generate PEGS Specs documentation from CSV",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build src/main.ts -o dist --license licenses.txt",
    "test": "jest --cacheDirectory=.jest-cache",
    "all": "npm run build && npm run package && npm test"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
